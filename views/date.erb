<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <% time = Time.now
      day_of_week = time.wday

      def weekday(day_of_week)
      case day_of_week
        when 0
          return "Sunday"
        when 1
          return "Monday"
        when 2
          return "Tuesday"
        when 3
          return "Wednesday"
        when 4
          return "Thursday"
        when 5
          return "Friday"
        when 6
          return "Saturday"
        end
      end

      month_of_year = time.month
      def month(month_of_year)
      case month_of_year
        when 1
          return "January"
        when 2
          return "February"
        when 3
          return "March"
        when 4
          return "April"
        when 5
          return "May"
        when 6
          return "June"
        when 7
          return "July"
        when 8
          return "August"
        when 9
          return "September"
        when 10
          return "October"
        when 11
          return "November"
        when 12
          return "December"
        end
      end
      %>
      <%
      day_of_month = time.day
      def date(day_of_month)
      two_digit_date = [0]
      case day_of_month
        when (1..9)
          two_digit_date << day_of_month
          return two_digit_date.join
        when (10..31)
          return day_of_month.to_s
        end
      end

      year = time.year
      %>
    <p>The date is <%= weekday(day_of_week) %>, <%= month(month_of_year) %> <%= date(day_of_month) %>, <%= year %> </p>
  </body>
</html>
